<h1>New Advertisement</h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for @advertisement do |a| %>
      <div class="form-group">
        <%= a.label :title %>
        <%= a.text_field :title, class: "form-control", placeholder: "Enter advertisement title" %>
      </div>
      <div class="form-group">
        <%= a.label :price %>
        <%= a.text_field :price, class: "form-control", placeholder: "Enter price of product" %>
      </div>
      <div class="form-group">
        <%= a.label :body %>
        <%= a.text_field :body, rows: 8, class: 'form-control', placeholder: "Enter advertisement body"%>
      </div>
      <div class="form-group">
        <%= a.submit "Post", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
