<h1><%= @question.title %>
  <% if @question.resolved %>
    <small class="bg-success">Resolved</small>
  <% else %>
    <small class="bg-warning">Unresolved</small>
  <% end %>
</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @question.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "<< Back", questions_path, class: "btn btn-default" %>
    <%= link_to "Edit", edit_question_path(@question), class: "btn btn-success" %>
    <%= link_to "Delete", @question, method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure you want to delete this question?'} %>
  </div>
</div>
